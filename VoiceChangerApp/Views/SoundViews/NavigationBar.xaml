<UserControl x:Class="VoiceChangerApp.Views.SoundViews.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VoiceChangerApp.Views.SoundViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <ProgressBar x:Name="ProgressBar" Minimum="0" Maximum="1" Value="0.5" MinHeight="20" MouseDown="ProgressBar_MouseDown" MouseUp="ProgressBar_MouseUp" MouseMove="ProgressBar_MouseMove"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Margin="5" Content="&lt;&lt;" DockPanel.Dock="Left"/>
                <Button Margin="5" Content="Stop"/>
                <Button Margin="5" Content="Play/Pause"/>
                <Button Margin="5" Content=">>" DockPanel.Dock="Right"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
