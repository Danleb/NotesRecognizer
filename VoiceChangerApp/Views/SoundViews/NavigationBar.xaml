<UserControl x:Class="VoiceChangerApp.Views.SoundViews.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VoiceChangerApp.Views.SoundViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <ProgressBar Minimum="0" Maximum="100" Value="50" MinHeight="20">
            </ProgressBar>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Margin="5" Content="&lt;&lt;" DockPanel.Dock="Left"></Button>
                <Button Margin="5" Content="Stop"></Button>
                <Button Margin="5" Content="Play/Pause"></Button>
                <Button Margin="5" Content=">>" DockPanel.Dock="Right"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
