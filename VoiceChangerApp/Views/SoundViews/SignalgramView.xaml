<UserControl x:Class="VoiceChangerApp.Views.SoundViews.SignalgramView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VoiceChangerApp.Views.SoundViews"
             xmlns:sharpGL="clr-namespace:SharpGL.WPF;assembly=SharpGL.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <sharpGL:OpenGLControl x:Name="OpenGLControl"
                               Initialized="OpenGLControl_Initialized"
                               OpenGLDraw="OpenGLControl_OpenGLDraw"
                               Resized="OpenGLControl_Resized"
                               KeyDown="OpenGLControl_KeyDown"
                               MouseWheel="OpenGLControl_MouseWheel"
                               MouseDown="OpenGLControl_MouseDown"
                               MouseUp="OpenGLControl_MouseUp"
                               MouseMove="OpenGLControl_MouseMove"                               
                               />
    </Grid>
</UserControl>
